<h1>Merchant Discounts</h1>

<% @merchant.discounts.each do |discount| %>
  <p><b>Name:</b> <%= discount.name %>
  <p>Percentage: <%= link_to discount.percentage, merchant_discount_path(@merchant, discount) %>(Click link to view this discount)</p>
  <p>Threshold: <%= discount.threshold %></p>
  <p><%= link_to "Edit #{discount.name}", edit_merchant_discount_path(@merchant, discount) %></p>
  <p><%= link_to "Delete #{discount.name}", merchant_discount_path(@merchant, discount), method: :delete %></p>
<% end %>

<h3><%= link_to "Create new discount", new_merchant_discount_path(@merchant) %></h3>

<h3>Upcoming Holidays</h3>

<% @holidays.each do |holiday| %>
  <p><b><%= holiday.holiday_name %></b></p>
  <p><%= holiday.holiday_date %></p>
<% end %>
